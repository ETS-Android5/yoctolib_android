<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".hubs.HubListActivity">

    <TextView
        android:id="@+id/item_hub_url"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_hub_edit"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ws://172.17.17.142" />

    <ImageView
        android:id="@+id/item_hub_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:contentDescription="@string/delete_hub"
        android:src="@drawable/ic_close_circle_grey600_18dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_hub_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item_hub_edit"
        app:layout_constraintTop_toTopOf="@+id/item_hub_edit" />

    <ImageView
        android:id="@+id/item_hub_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:contentDescription="@string/edit_hub"
        android:src="@drawable/ic_pencil_grey600_18dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_hub_url"
        app:layout_constraintEnd_toStartOf="@+id/item_hub_delete"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item_hub_url"
        app:layout_constraintTop_toTopOf="@+id/item_hub_url" />

</android.support.constraint.ConstraintLayout>